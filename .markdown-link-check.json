{
  "timeout": "10s",
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "30s",
  "aliveStatusCodes": [200, 206],
  "httpHeaders": [
    {
      "urls": ["https://example.com"],
      "headers": {
        "User-Agent": "markdown-link-check validator"
      }
    }
  ],
  "ignorePatterns": [
    {
      "pattern": "^http://localhost"
    },
    {
      "pattern": "^https://localhost"
    },
    {
      "pattern": "^file://"
    },
    {
      "pattern": "^#"
    }
  ]
}